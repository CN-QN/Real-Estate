@model List<RealEstate.Models.ViewModels.PropertyDetailViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Danh sách bất động sản";
}

<div class="container my-5">
    <h3 class="fw-bold mb-4">Tin đăng bất động sản</h3>
    <div>
        @if(Model.Count==0)
            {
                <p>Sản phẩm không tồn tại</p>
            }
    </div>
    <div class=" g-4">
        @foreach (var item in Model)
        {
                <div style="height:200px;width:780px" class="my-3 property-card ">
                    <a class="text-decoration-none  " href="/Property/Details/@item.Id">

                        <div class=" d-flex  border-0 shadow-lg  ">



                            <div >
                                <img loading="lazy" style="width:200px;height:200px" src="@item.ImageGallery[0].ImageUrl"  />
                            </div>
                            <div class="p-2">
                                <h5 style="height:48px" class="text-primary fw-bold">@item.Title</h5>
                                <p class="line-clamp-2 lh-1 my-2 text-danger m-0">@item.Description</p>

                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-cash-coin me-2 text-success"></i>
                                    @if (item.PriceMin == item.PriceMax)
                                    {
                                        <span class="fw-bold">@item.PriceMin @item.PriceUnit</span>

                                    }
                                    else
                                    {
                                        <span class="fw-bold">@item.PriceMin - @item.PriceMax @item.PriceUnit</span>

                                    }
                                    <span class="mx-3 text-secondary">|</span>
                                    <i class="bi bi-aspect-ratio me-2"></i>
                                    @if (item.AreaMax == item.AreaMin)

                                    {
                                        <span>@item.AreaMin @item.AreaUnit</span>

                                    }
                                    else
                                    {
                                        <span>@item.AreaMin - @item.AreaMax @item.AreaUnit</span>

                                    }
                                </div>

                                <div class="text-secondary mb-1">
                                    <i class="bi bi-geo-alt"></i> @item.Address
                                </div>

                                <small class="text-muted">
                                    <i class="bi bi-clock"></i>
                                    @(item.CreatedAt > DateTime.Now.AddDays(-1)
                    ? $"{(DateTime.Now - item.CreatedAt).Hours} giờ trước"
                    : $"{(DateTime.Now - item.CreatedAt).Days} ngày trước")
                                </small>
                            </div>

                        </div>
                    </a>

                </div>
        }
    </div>
</div>

<style>
    .property-card:hover {
        transform: translateY(-4px);
        transition: all 0.2s ease;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    }
</style>
