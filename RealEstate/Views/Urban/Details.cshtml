
@model RealEstate.Models.ViewModels.UrbanDetailViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = Model.Title;
}

<style>
    .custom-control .carousel-control-prev-icon,
    .custom-control .carousel-control-next-icon {
        width: 3rem;
        height: 3rem;
        background-color: rgba(0, 0, 0, 0.5); /* nền đậm hơn */
        border-radius: 50%;
        background-size: 60%;
        background-position: center;
        background-repeat: no-repeat;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .custom-control:hover .carousel-control-prev-icon,
    .custom-control:hover .carousel-control-next-icon {
        background-color: rgba(0, 123, 255, 0.8); /* xanh nhấn mạnh khi hover */
        transform: scale(1.1);
    }

    .carousel-control-prev
     {
        transform: translateX(-50%);
    }
    .carousel-control-next {
        transform: translateX(50%);
    }
    .carousel-control-prev,
    .carousel-control-next {
        opacity: 1;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <!-- Slider -->
    <div id="urbanCarousel" class="carousel slide mb-4 position-relative" data-bs-ride="carousel">
        <div class="carousel-inner">
            @{
                int itemsPerSlide = 4;
                int totalImages = Model.Images.Count;
                int slideCount = (int)Math.Ceiling((double)totalImages / itemsPerSlide);
            }

            @for (int i = 0; i < slideCount; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row g-2">
                        @{
                            var slideImages = Model.Images.Skip(i * itemsPerSlide).Take(itemsPerSlide);
                        }

                        @foreach (var img in slideImages)
                        {
                            <div class="col-md-3 col-sm-6">
                                <img src="@img.UrlImage" class="d-block w-100 rounded-3 shadow-sm"
                                     alt="Ảnh dự án"
                                     style="height: 200px; object-fit: cover;">
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Nút điều hướng -->
        <button class="carousel-control-prev custom-control" type="button" data-bs-target="#urbanCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next custom-control" type="button" data-bs-target="#urbanCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>


    <!-- Thông tin dự án -->
    <div class="row">
        <!-- Bên trái -->
        <div class="col-lg-8">
            <h5 class="text-primary fw-bold mb-3">Tổng quan dự án @Model.Title</h5>
            <div class="table-responsive mb-4">
                <table class="table table-bordered">
                    <tbody>
                        @foreach (var item in Model.Attributes)
                        {
                            <tr>
                                <td><strong>@item.Key</strong></td>
                                <td>@item.Value</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <h5 class="fw-bold text-uppercase text-primary mb-2">Thông tin chi tiết dự án</h5>
            <div class="project-description">
                @Html.Raw(Model.Description)
            </div>
        </div>

        <!-- Bên phải -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3 text-center text-primary">Tải tài liệu và báo giá</h6>
                    <form>
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Họ và tên" />
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="Email" />
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" placeholder="Số điện thoại" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h6 class="fw-bold mb-2 text-primary">Mục lục</h6>
                    <ul class="list-unstyled">
                        <li><a href="#tongquan" class="text-decoration-none">Tổng quan dự án</a></li>
                        <li><a href="#vitri" class="text-decoration-none">Vị trí dự án</a></li>
                        <li><a href="#matbang" class="text-decoration-none">Mặt bằng dự án</a></li>
                        <li><a href="#tienich" class="text-decoration-none">Tiện ích dự án</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

