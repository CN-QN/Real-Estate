@{
    ViewBag.Title = "Đăng bài mới";
    Layout = "~/Views/Shared/_LayoutAgent.cshtml";
}

<div class="container-fluid">
    <h3 class="fw-bold mb-4">Đăng bài mới</h3>

    <form class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input type="text" class="form-control" placeholder="Nhập tiêu đề bài đăng" />
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Loại bài đăng</label>
                <select class="form-select">
                    <option>Bán</option>
                    <option>Cho thuê</option>
                </select>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Giá</label>
                <input type="number" class="form-control" placeholder="Giá (VNĐ)" />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea class="form-control" rows="4"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Hình ảnh</label>
            <input type="file" class="form-control" multiple />
        </div>
        <button type="submit" class="btn btn-primary">Đăng bài</button>
    </form>
</div>
