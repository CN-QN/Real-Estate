@model RealEstate.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="  py-5 bg-acccount">
    <div class="row align-items-center w-75  justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold text-warning">Quên mật khẩu</h3>

                    <p class="text-muted text-center mb-4">
                        Nhập địa chỉ email của bạn để nhận liên kết đặt lại mật khẩu.
                    </p>

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập email của bạn", @type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-warning py-2 fw-semibold">
                                Gửi liên kết đặt lại mật khẩu
                            </button>
                        </div>
                    }

                    @Html.ValidationSummary("", new { @class = "text-danger small text-center" })

                    <div class="text-center mt-3">
                        <small>
                            <a href="/Account/Login" class="text-decoration-none fw-semibold text-primary">← Quay lại đăng nhập</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
