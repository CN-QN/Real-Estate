@model RealEstate.Models.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="  py-5 bg-acccount">
    <div class="row  align-items-center w-75  justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold text-primary">Đặt lại mật khẩu</h3>

                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Email)

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mật khẩu mới</label>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu mới" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Xác nhận mật khẩu</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập lại mật khẩu" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="bi bi-lock-fill me-2"></i> Xác nhận
                        </button>
                    }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info text-center mt-4">@ViewBag.Message</div>
                    }
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Quay lại đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #f8f9fa);
        min-height: 100vh;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }
</style>
