<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard - Homedy Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <link href="~/Content/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/webfonts/fa-solid-900.woff2" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white mh-100 p-3 fixed-top " style="width: 250px;height:100vh">
            <h4 class="text-center mb-4">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="/Admin" class="nav-link text-white"><i class="fa-solid fa-house"></i> Dashboard</a></li>
                <li class="nav-item mb-2"><a href="/Admin/QuanLyTin" class="nav-link text-white"><i class="fa-solid fa-newspaper"></i> Quản lý tin</a></li>
                <li class="nav-item mb-2"><a href="/Admin/QuanLyNguoiDung" class="nav-link text-white"><i class="fa-solid fa-users"></i> Quản lý người dùng</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link text-white"><i class="fa-solid fa-chart-line"></i> Thống kê</a></li>
                <li class="nav-item"><a href="/Account/Logout" class="nav-link text-danger"><i class="fa-solid fa-right-from-bracket"></i> Đăng xuất</a></li>
            </ul>
        </div>

        <!-- Content -->
        <div class="flex-grow-1 p-4 bg-light" style="margin-left:250px">
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
</body>
</html>
