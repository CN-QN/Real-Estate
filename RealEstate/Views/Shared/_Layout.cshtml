            </div>
            <div class="search-input">
                <input type="text" placeholder="Nhập từ khóa tìm kiếm...">
                <button class="btn-search">🔍</button>
            </div>
            <div class="filters">
                <select>
                    <option>Toàn quốc</option>
                    <option>TP.HCM</option>
                    <option>Hà Nội</option>
                </select>
                <select>
                    <option>Dự án</option>
                    <option>Chung cư</option>
                    <option>Nhà riêng</option>
                </select>
                <select>
                    <option>Loại BĐS</option>
                    <option>Đất nền</option>
                    <option>Nhà phố</option>
                </select>
                <select>
                    <option>Mức giá</option>
                    <option>Dưới 1 tỷ</option>
                    <option>1 - 3 tỷ</option>
                </select>
                <select>
                    <option>Diện tích</option>
                    <option>Dưới 50m²</option>
                    <option>50 - 100m²</option>
                </select>
                <select>
                    <option>Lọc thêm</option>
                    <option>Hướng nhà</option>
                    <option>Số phòng</option>
                </select>
                <button class="btn-reset">↻ Đặt lại</button>
                <button class="btn-map">🗺️ Bản đồ</button>
            </div>
        </div>
         
    </section>


