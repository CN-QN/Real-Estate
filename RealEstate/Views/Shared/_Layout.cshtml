<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RealEstate</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        .toast {
            opacity: 1 !important;
        }

        .toast-success {
            background-color: #51A351 !important;
        }

        .toast-error {
            background-color: #BD362F !important;
        }

        .toast-info {
            background-color: #2F96B4 !important;
        }

        .toast-warning {
            background-color: #F89406 !important;
        }
    </style>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <style>
        .search-bar {
            background: #e9f4ff;
            padding: 30px 0;
        }

        .property-card {
            border-radius: 8px;
            overflow: hidden;
            transition: 0.3s;
        }

            .property-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }
    </style>
</head>
<body>

    <header>
        <!-- TOP HEADER -->
        <div class="border-bottom bg-white">
            <div class="container d-flex justify-content-between align-items-center py-2">
                <a href="/" class="d-flex align-items-center">
                    <img src="https://static.homedy.com/src/images/v1/logo-homedy.svg?v=3" alt="Homedy" style="height:40px;">
                </a>

                <nav class="d-none d-md-flex gap-4 fw-semibold text-uppercase">
                    <a href="#" class="text-dark text-decoration-none">Dự án</a>
                    <a href="#" class="text-dark text-decoration-none">Mua bán</a>
                    <a href="#" class="text-dark text-decoration-none">Cho thuê</a>
                    <a href="#" class="text-dark text-decoration-none">Chuyên gia</a>
                    <a href="#" class="text-dark text-decoration-none">Thiết kế nhà đẹp</a>
                    <a href="#" class="text-dark text-decoration-none">Cẩm nang</a>
                    <a href="#" class="text-dark text-decoration-none">Tiện ích</a>
                </nav>

                <div class="d-flex align-items-center gap-3">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a href="#" class="text-dark text-decoration-none fw-semibold dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Users/ProfileUser">Trang cá nhân</a></li>
                                <li><a class="dropdown-item" href="/Account/Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                        <a href="/Agent" class="btn btn-outline-primary fw-semibold">ĐĂNG TIN</a>
                    }
                    else
                    {
                        <a style="width:120px" href="/Account/Login" class="text-dark text-decoration-none fw-semibold">Đăng nhập</a>
                        <button class="btn btn-outline-primary fw-semibold">ĐĂNG TIN</button>
                    }
                </div>

            </div>
        </div>


    </header>


    <div>
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="footer-top">
            <div class="container">
                <div class="footer-columns">
                    <!-- Cột 1 -->
                    <div class="footer-col">
                        <h4>Bất động sản TPHCM</h4>
                        <ul>
                            <li><a href="#">Bán đất TPHCM</a></li>
                            <li><a href="#">Bán nhà TPHCM</a></li>
                            <li><a href="#">Bán đất nền TPHCM</a></li>
                            <li><a href="#">Bán nhà mặt phố TPHCM</a></li>
                            <li><a href="#">Bán căn hộ chung cư TPHCM</a></li>
                            <li><a href="#">Cho thuê căn hộ TPHCM</a></li>
                            <li><a href="#">Cho thuê phòng trọ TPHCM</a></li>
                            <li><a href="#">Cho thuê văn phòng TPHCM</a></li>
                        </ul>
                    </div>

                    <!-- Cột 2 -->
                    <div class="footer-col">
                        <h4>Bất động sản Hà Nội</h4>
                        <ul>
                            <li><a href="#">Bán đất Hà Nội</a></li>
                            <li><a href="#">Bán nhà Hà Nội</a></li>
                            <li><a href="#">Bán căn hộ Hà Nội</a></li>
                            <li><a href="#">Cho thuê căn hộ Hà Nội</a></li>
                            <li><a href="#">Cho thuê nhà mặt phố Hà Nội</a></li>
                            <li><a href="#">Cho thuê văn phòng Hà Nội</a></li>
                        </ul>
                    </div>

                    <!-- Cột 3 -->
                    <div class="footer-col">
                        <h4>Mua bán nhà đất</h4>
                        <ul>
                            <li><a href="#">Bán đất Quận 9</a></li>
                            <li><a href="#">Bán đất Bình Chánh</a></li>
                            <li><a href="#">Bán nhà Quận 12</a></li>
                            <li><a href="#">Bán chung cư Quận 12</a></li>
                            <li><a href="#">Bán đất Bảo Lộc</a></li>
                            <li><a href="#">Dự án Dalat Pearl</a></li>
                        </ul>
                    </div>

                    <!-- Cột 4 -->
                    <div class="footer-col">
                        <h4>Cho thuê bất động sản</h4>
                        <ul>
                            <li><a href="#">Phòng trọ Đà Nẵng</a></li>
                            <li><a href="#">Thuê nhà Hải Phòng</a></li>
                            <li><a href="#">Phòng trọ Quận 9</a></li>
                            <li><a href="#">Phòng trọ Gò Vấp</a></li>
                            <li><a href="#">Phòng trọ Bình Thạnh</a></li>
                            <li><a href="#">Phòng trọ Thủ Đức</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer bottom -->
        <div class="footer-bottom">
            <div class="container">
                <div class="footer-links">
                    <div>
                        <h4>Về RealEstate</h4>
                        <ul>
                            <li><a href="#">Giới thiệu</a></li>
                            <li><a href="#">Tuyển dụng</a></li>
                            <li><a href="#">Bảo mật thông tin</a></li>
                            <li><a href="#">Trợ giúp</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4>Tài khoản</h4>
                        <ul>
                            <li><a href="#">Đăng ký</a></li>
                            <li><a href="">Đăng nhập</a></li>
                            <li><a href="#">Đăng tin mới</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4>Liên hệ</h4>
                        <p>📞 0768.283.968</p>
                        <p>✉️ lienhe@realestate.com</p>
                    </div>
                    <div>
                        <h4>Kết nối</h4>
                        <div class="socials">
                            <a href="#">🌐 Facebook</a>
                            <a href="#">🌐 LinkedIn</a>
                            <a href="#">🌐 Twitter</a>
                        </div>
                    </div>
                </div>

                <div class="copyright">
                    <p>&copy; 2025 RealEstate - Bản quyền thuộc về Công ty RealEstate Việt Nam</p>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-left", // top-left, bottom-right,...
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            //"hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>
    @if (TempData["ToastrMessage"] != null)
    {
        <script>
              toastr["@TempData["ToastrType"]"]("@TempData["ToastrMessage"]");
        </script>
    }

</body>

</html>
