    <style>
        .search-bar {
            background: #e9f4ff;
            padding: 30px 0;
        }

        .property-card {
            border-radius: 8px;
            overflow: hidden;
            transition: 0.3s;
        }

            .property-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }
    </style>
