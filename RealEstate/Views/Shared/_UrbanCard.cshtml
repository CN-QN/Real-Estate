@using RealEstate.Utils
@model RealEstate.Models.ViewModels.UrbanViewModel

<a href="/Urban/Details/@Model.Id" class="text-decoration-none text-dark ">
    <div class="card property-card shadow-sm border-0">
        <div class="position-relative">

            <img src="@Model.Url"
                 alt="@Model.Title"
                 class="card-img-top property-img" />

            <span class="badge bg-primary position-absolute top-0 end-0 m-2">
                Nổi bật

            </span>
        </div>

        <div class="card-body p-2">
            <h6 class="card-title text-primary mb-1 line-clamp-2">@Model.Title</h6>
            <p class="text-muted small mb-2 text-truncate">
                <i class="bi bi-geo-alt"></i> @Model.Address
            </p>

            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-semibold text-danger">
                    @Model.Price  Tỷ
                </span>
                 
            </div>

            
        </div>
    </div>
</a>
