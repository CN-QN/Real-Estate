
<div class="d-flex justify-content-center mt-4">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                @if (ViewBag.PageNumber > 1)
                {
                    <a class="page-link" href="/Admin/@ViewBag.Mode?PageNumber=@(ViewBag.PageNumber-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                }


            </li>
            @for (int i = 0; i < ViewBag.Count; i++)
            {

                <li class="page-item">
                    <a class="page-link @(ViewBag.PageNumber ==i+1? "active" : "") " href="/Admin/@ViewBag.Mode?PageNumber=@(i+1)">@(i + 1)</a>
                </li>

            }
        <li class="page-item">
            @if (ViewBag.PageNumber  < ViewBag.Count)
            {
                <a class="page-link" href="/Admin/@ViewBag.Mode?PageNumber=@(ViewBag.PageNumber+1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            }

        </li>
        </ul>
    </nav>
</div>