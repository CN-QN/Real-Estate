@model List<RealEstate.Models.ViewModels.DanhSachNguoiDung>
 
<div class="card shadow-sm mt-4">
    <div class="card-header bg-light fw-bold">
        <i class="fa-solid fa-users"></i> Danh sách người dùng
    </div>

    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                    <th>Ngày tạo</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-secondary")">
                                @user.Role
                            </span>
                        </td>
                        <td>@user.Created_at.ToString("dd/MM/yyyy")</td>
                        <td class="text-center d-flex justify-content-center gap-2">
                            @using (Html.BeginForm("EditUser", "Admin", FormMethod.Get))
                            {
                                @Html.Hidden("id", user.Id)
                                <button type="submit" class="btn btn-sm btn-warning">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            }

                            @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc muốn xóa người dùng này không?');" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", user.Id)
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.Count > 0)
    {
        @Html.Partial("_Pagination", (int)ViewBag.Count)
    }

    @if (ViewBag.XemThem != null)
    {
        <div class="text-center my-3">
            <button class="btn btn-primary text-white">
                @Html.ActionLink("Xem thêm", "DanhSachNguoiDung", "Admin", new { PageNumber = 1 }, new { @class = "text-white text-decoration-none" })
            </button>
        </div>
    }
</div>
