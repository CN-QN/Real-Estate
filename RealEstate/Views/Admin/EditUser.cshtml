
@model RealEstate.Models.ViewModels.DanhSachNguoiDung
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <i class="fa-solid fa-user-pen"></i> Chỉnh sửa người dùng
    </div>

    <div class="card-body">
        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="mb-3">
                @Html.LabelFor(m => m.Name, "Tên người dùng", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên người dùng" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Nhập email" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Role, "Vai trò", new { @class = "form-label fw-bold" })
                <select name="Role" class="form-select">
                    @foreach (var role in ViewBag.Roles)
                    {
                        <option value="@role.Name" @(Model.Role == role.Name ? "selected" : "")>@role.Name</option>
                    }
                </select>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("DanhSachNguoiDung", "Admin")" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-floppy-disk"></i> Lưu thay đổi
                </button>
            </div>
        }
    </div>
</div>
