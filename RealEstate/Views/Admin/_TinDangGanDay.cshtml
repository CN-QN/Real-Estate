@model  List<RealEstate.Models.ViewModels.TinDangGanDay>
<div class="card shadow-sm mt-4">
    <div class="card-header bg-light fw-bold">
        <i class="fa-solid fa-newspaper"></i> Tin đăng gần đây
    </div>
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Tiêu đề</th>
                    <th>Người đăng</th>
                    <th>Ngày đăng</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Name</td>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Status == "Active")
                            {
                                <span class="badge bg-success">Đã duyệt</span>
                            }
                            else if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Từ chối</span>
                            }
                        </td>
                        <td class="text-center d-flex justify-content-between ">
                           <div  >
                                @using (Html.BeginForm("EditPost", "Admin", FormMethod.Get))
                            {
                                @Html.Hidden("id", item.Id)
                                <button type="submit" class="btn btn-sm btn-warning">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            }
                               </div>

                            <div>
                                @using (Html.BeginForm("DeletePost", "Admin", FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc muốn xóa không?');" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.Id)
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            }
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.Count > 0)
    {
        @Html.Partial("_Pagination", (int)ViewBag.Count)
    }
            @if(ViewBag.XemThem !=null)
    {
    <div class="text-center my-3">
        <button class="btn btn-primary text-white">
     
        @Html.ActionLink("Xem thêm","QuanLyTin","Admin", new {PageNumber=1},new {@class ="text-white text-decoration-none"})
            </button>
        </div>
    }
   
</div>

